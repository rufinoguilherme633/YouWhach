<div class="configuracoes-page">
  <h1>Configurações</h1>

  <!-- Seção apagar conta -->
  <div class="acoes-criticas">
    <h2>Apagar Conta</h2>
    <p>Cuidado: esta ação é permanente.</p>
    <form action="" method="">
      <button type="button" class="button-apagar-conta" onclick="abrirModalDeletarConta({{userId}})">Apagar Conta</button>
    </form>
  </div>
</div>




<div id="modal-deletar-conta" class="modal" style="display:none;">
  <div class="modal-content">
    <h2>Deseja realmente apagar sua conta?</h2>
    <form id="form-deletar-conta" method="">
      <div class="container-buttons">
        <button type="button" class="button confirmar-button" onclick="deletarConta(event)">Confirmar</button>
        <button type="button" class="button fechar-button" onclick="fecharModalDeletarConta()">Cancelar</button>
      </div>
    </form>
  </div>
</div>