<div class="minha-conta">
    <h1>Minha Conta</h1>

<form action="/usuario" method="POST" enctype="multipart/form-data" class="form-minha-conta">

    <div class="container-form-meus-dados">
          <div class="user-photo">
    <input type="file" id="foto" name="foto" style="display: none;">
    
    <label for="foto">
        {{#if user.foto}}
            <img src="{{user.foto}}" alt="Foto do usuário" class="foto-usuario">
        {{else}}
            <img src="/img/users/usuario sem foto.svg" alt="Foto do usuário" class="foto-usuario">
        {{/if}}
    </label>
</div>


    <div class="form-group">
        <label>Nome</label>
        <input type="text" name="nome" value="{{user.nome}}">
    </div>

    <div class="form-group">
        <label>Sobrenome</label>
        <input type="text" name="sobrenome" value="{{user.sobrenome}}">
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <input type="email" name="email" value="{{user.email}}">
    </div>


    <div class="form-group">
        <label>Telefone</label>
        <input type="text" name="telefone" value="{{user.telefone}}">
    </div>

    <div class="form-group">
        <label>Tipo de usuário</label>
        <input type="text" name="tipo" value="{{user.id_tipo_usuario}}" readonly>
    </div>

    <div class="form-group">
        <label>Gênero</label>
        <input type="text" name="genero" value="{{user.id_genero}}" readonly>
    </div>

    
    </div>
    <div class="container-button">
            <button type="submit" class="button-criar">Editar</button>

    </div>
</form>

</div>